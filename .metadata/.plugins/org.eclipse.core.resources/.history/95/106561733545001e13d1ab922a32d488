#include <stdio.h>
#include <stdlib.h>

inline int factorial(int n)
{
if (n==0)
{return 1;}
else{
	while(n--)
		return ( 1 * n* factorial(n));
}

}




void main(void)
{
	int y = 4;
	int f = factorial(y);
	printf("d\n",f);


}
