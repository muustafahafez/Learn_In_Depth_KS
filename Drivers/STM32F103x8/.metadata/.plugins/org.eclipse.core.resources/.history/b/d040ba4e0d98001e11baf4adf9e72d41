	if(ACC_State == ACC_Active)
	{
		//Send CAN Message with speed Value
		//		CAN_Tx(0x3ff, 1, Data,1);
		//		CAN_Tx(0x3ff, 1, 'A');
	}

//	HAL_GPIO_WritePin(GPIOA, GPIO_PIN_0, 0);

}

//CA RX Task
void CAN_RX_Task()
{
	HAL_GPIO_WritePin(GPIOA, GPIO_PIN_0, 1);

	//Receive Traffic light state
	CAN_Rx(&RX_ID, &RX_DLC, DataRX,0);
	/*Traffic_Light = DataRX[0];
	if(Traffic_Light ==Traffic_RED)
	{
		ACC_State = 0;
	}
	else if (Traffic_Light ==Traffic_GREEN)
	{
		ACC_State = 0;

	}*/
	HAL_GPIO_WritePin(GPIOA, GPIO_PIN_0, 0);

}

