#include "Obscal_Avoiding.h"
#include "State.h"
#include <stdio.h>
#include <stdlib.h>

int DC_Speed = 0;
DC_STAT = DC_State_Running;

 void (*DC_Pfunc)();


STATE_DEF(CA_Waiting)
{

	//State name
	Current_state = State_Waiting;
	//State action
	CA_Speed = 0;
	//DC_Motor_Speed

	//Read from US
	CA_Distance = US_GetRandom_Distance(45,55,1);
	//state event
	(CA_Distance<=CA_Threshold)?(Pfunc= STATE(CA_Waiting)):(Pfunc= STATE(CA_Driving));
	printf("CA_Waiting state: Distance = %d   Speed =%d \n",CA_Distance,CA_Speed);

}


int US_GetRandom_Distance(int Low , int High , int counts){

	int i ;
	for(i =0; i<counts ; i++)
	{
		int random_num = (rand() % (High - Low + 50))+1;
		return random_num;
	}
}
